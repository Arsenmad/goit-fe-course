{
  "name": "module-09",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "server": "browser-sync module-09 -w",
    "dev": "npm run server",
    "lint": "stylelint module-09/css/*.css",
    "css": "postcss module-09/css/*.css --use autoprefixer --use cssnano -d build/css",    
    "clean": "rimraf build && mkdir build",
    "html": "html-minifier --input-dir module-09 --output-dir build --collapse-whitespace --file-ext html",
    "images": "imagemin module-09/img/*",
    "prebuild": "npm run lint",
    "build": "npm run clean && npm run images && npm run css && npm run html"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "autoprefixer": "^9.1.5",
    "browser-sync": "^2.26.0",
    "cssnano": "^4.1.4",
    "html-minifier": "^3.5.20",
    "imagemin": "^6.0.0",
    "postcss-cli": "^6.0.0",
    "stylelint": "^9.6.0"
  }
}
